<div id="buger"></div>
<div class="weui-tab" style="position:fixed;left:0px; bottom:0px;width:100%">
    <div class="weui-navbar">
        <div class="weui-navbar__item"><a href="#home-0"><i class="fa fa-home fa-fw"></i></a></div>
        <div class="weui-navbar__item weui-bar__item_on"><a href="#acts-0"><i class="fa fa-calendar  fa-fw"></i></a></div>
        <div class="weui-navbar__item"><a href="#club-0"><i class="fa fa-users  fa-fw"></i></a></div>
    </div>
    <div class="weui-tab__panel">
        <div class="header-container">
            <img class="header-image" src="#{data[0].filename}" alt=""  />
            <div class="header">
                <h1 class="main-heading">#{data[0].title}</h1>
                <input type=hidden id="cid" name="cid" value="#{data[0].id}" />
                <input type=hidden id="cuserid" name="cuserid" value="#{data[0].userid}" />
                <div class="club-actions" id="tagme">
                </div>
            </div>
        </div>
        <div class="body" id="psumm">
            <!--album-->
            <h2>活动介绍</h2>
            <table>
                <tr><td><i class="fa fa-unlock"></i></td><td>#{data[0].status}</td></tr>
                <tr><td><i class="fa fa-users"></i></td><td>#{data[0].usercnt}</td></tr>
                <tr><td><i class="fa fa-user-o"></i></td><td>#{data[0].nickname}</td></tr>
                <tr><td><i class="fa fa-clock-o"></i></td><td>#{data[0].startdate} -  #{data[0].enddate}</td></tr>
                <tr><td><i class="fa fa-hand-o-right"></i></td><td>#{data[0].location}</td></tr>
                <tr><td><i class="fa fa-address-card-o"></i></td><td><a href="#clubdetail-#{data[0].clubid}-0">#{data[0].clubname && data[0].clubname.length >  0 ? data[0].clubname : "公司活动"}</a></td></tr>
                if parseInt(data[0].grade)>=0
                    <tr><td><i class="fa fa-certificate"></i></td><td>#{data[0].grade}级 !{data[0].gradename}</td></tr>
                if parseInt(data[0].score)>=0
                    <tr><td><i class="fa fa-star-half-o"></i></td><td>#{data[0].score}</td></tr>
            </table>
            <p>#{data[0].summary}</p>
            <div class="panel-albums panel">
                <div class="albums">
                <div class="album">
                <img src="https://unsplash.it/1000/400/?random" alt="">
                </div>
                <div class="album">
                <img src="https://unsplash.it/600/500/?random" alt="">
                </div>
                <div class="album">
                <img src="https://unsplash.it/600/400/?random" alt="">
                </div>
                <div class="album">
                <img src="https://unsplash.it/900/800/?random" alt="">
                </div>
                <div class="album">
                <img src="https://unsplash.it/300/400/?random" alt="">
                </div>
                <div class="album">
                <img src="https://unsplash.it/1024/768/?random" alt="">
                </div>
                </div>
            </div>
        </div>
        <div class="body" id="pmembers" style="display:none">
        <h2>参与成员</h2>
        <div id="members"></div>
        </div>
        <div class="body" id="psess" style="display:none">
        <div id="newsess">       
        <button type="button" class="btn btn-default" id="new-session-btn" onclick="c(this,'startsession');">
        <span class="glyphicon glyphicon-list-alt"></span> 新的安排 </button> </div>
        <div id="crsess" style="display:none">名称: <input type=text name="nname" id="nname" size=20 value="" /> <br/>时间: <input type=text name="ntime" id="ntime" size=12 value="" /> <br/>                        地点: <input type=text name="nloc" size=20 value="#{data[0].location}" /> <br />
        <button id="post-btn" type="submit" class="btn btn-primary pull-right" onclick="c(this,'createsession');">创建</button>
        <button id="post-btn" type="button" class="btn pull-right" onclick="c(this,'startsession',true);">取消</button>
        </div>
        <div id="slist"></div>

        </div>
        <div class="body" id="plive" style="display:none"><h2>讨论</h2>
        <div id="cmts"></div></div>
        <div class="body" id="prules" style="display:none"><h2>规则</h2>
        <div id="rules"></div></div>
    </div>
</div>

